@model ISOOU.Web.Areas.Administration.ViewModels.Dashboard.IndexViewModel
@{
    this.ViewData["Title"] = "Admin dashboard";
}

    <div class="row">
        <div class="col-md-6">
            <form id="school888888-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Ref">
                    Номер на училището
                    </label>
                    <input asp-for="Ref" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Name">
                    Име на училището
                    </label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Address.Permanent">
                        Адрес на училището
                    </label>
                    <input asp-for="Address.Permanent" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Address.District">
                        Район
                    </label>
                    <input asp-for="Address.District" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Address.Quarter">
                        Квартал
                    </label>
                    <input asp-for="Address.Quarter" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Director.FirstName">Име на директора</label>
                    <input asp-for="Director.FirstName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Director.LastName">Фамилия на директора</label>
                    <input asp-for="Director.LastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Director.UCN">ЕГН на директор</label>
                    <input asp-for="Director.UCN" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Director.PhoneNumber">Телефонен номер на директор</label>
                    <input asp-for="Director.PhoneNumber" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="URLOfSchool">Линк към сайта на училището</label>
                    <input asp-for="URLOfSchool" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="URLOfMap">Линк към адреса на училището</label>
                    <input asp-for="URLOfMap" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="NumberOfClasses">Брой паралелки</label>
                    <input asp-for="NumberOfClasses" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="StudentsPerClass">Брой учиници в клас</label>
                    <input asp-for="StudentsPerClass" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="NecessaryDocuments">Необходими документи да се направи на списък</label>
                    <input asp-for="NecessaryDocuments" class="form-control" />
                </div>
                <button id="update-profile-button" type="submit" class="btn btn-secondary px-4 py-3 mt-3">Save</button>
            </form>
        </div>
    </div>