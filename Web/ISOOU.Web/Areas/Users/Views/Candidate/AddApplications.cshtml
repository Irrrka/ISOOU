@model ISOOU.Web.ViewModels.Users.AddApplicationsInputModel
@{
    ViewData["Title"] = "Кандидатури";
}

<section class="ftco-heading-2" style="background-image: url(/images/bg_4.jpg);" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <form id="add-applications" method="post">
                    <input hidden asp-for="UserName" value="@this.User.Identity.Name" />
                    <input hidden asp-for="CandidateId" value="@Model.CandidateId" />
                    <hr/>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="FirstWishSchool"><strong>Първо желание</strong></label>
                        <select class="form-control text-primary" asp-for="FirstWishSchool">
                            @foreach (var school in (IEnumerable<ISOOU.Web.ViewModels.Schools.AddSchoolApplicationsViewModel>)this.ViewData["AllSchools"])
                            {
                                <option value="@school.Name">Район @school.DistrictName / Училище - @school.Name</option>
                            }
                        </select>
                        <span asp-validation-for="FirstWishSchool" class="text-danger"></span>
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <select class="form-control text-primary" asp-for="FirstWishClassProfile">
                            @foreach (var schoolClass in (IEnumerable<ISOOU.Web.ViewModels.Schools.AddClassApplicationsViewModel>)this.ViewData["AllClasses"])
                            {
                                <option value="@schoolClass.ProfileName">Паралелка - @schoolClass.ProfileName</option>
                            }
                        </select>
                        <span asp-validation-for="FirstWishClassProfile" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="SecondWishSchool"><strong>Второ желание</strong></label>
                        <select class="form-control text-primary" asp-for="SecondWishSchool">
                            @foreach (var school in (IEnumerable<ISOOU.Web.ViewModels.Schools.AddSchoolApplicationsViewModel>)this.ViewData["AllSchools"])
                            {
                                <option value="@school.Name">Район @school.DistrictName / Училище - @school.Name</option>
                            }
                        </select>
                        <span asp-validation-for="SecondWishSchool" class="text-danger"></span>
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <select class="form-control text-primary" asp-for="SecondWishClassProfile">
                            @foreach (var schoolClass in (IEnumerable<ISOOU.Web.ViewModels.Schools.AddClassApplicationsViewModel>)this.ViewData["AllClasses"])
                            {
                                <option value="@schoolClass.ProfileName">Паралелка - @schoolClass.ProfileName</option>
                            }
                        </select>
                        <span asp-validation-for="SecondWishClassProfile" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="ThirdWishSchool"><strong>Трето желание</strong></label>
                        <select class="form-control text-primary" asp-for="ThirdWishSchool">
                            @foreach (var school in (IEnumerable<ISOOU.Web.ViewModels.Schools.AddSchoolApplicationsViewModel>)this.ViewData["AllSchools"])
                            {
                                <option value="@school.Name">Район @school.DistrictName / Училище - @school.Name</option>
                            }
                        </select>
                        <span asp-validation-for="ThirdWishSchool" class="text-danger"></span>
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <select class="form-control text-primary" asp-for="ThirdWishClassProfile">
                            @foreach (var schoolClass in (IEnumerable<ISOOU.Web.ViewModels.Schools.AddClassApplicationsViewModel>)this.ViewData["AllClasses"])
                            {
                                <option value="@schoolClass.ProfileName">Паралелка - @schoolClass.ProfileName</option>
                            }
                        </select>
                        <span asp-validation-for="ThirdWishClassProfile" class="text-danger"></span>
                    </div>

                    <div class="form-inline mt-2 justify-content-end">
                        <input type="submit" class="btn btn-secondary py-3 px-4" value="Добави" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}