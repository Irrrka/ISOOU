@model ISOOU.Web.ViewModels.Users.CreateCandidateInputModel
@{
    ViewData["Title"] = "Добавяне на дете";
}


<section class="ftco-heading-2" style="background-image: url(/images/bg_4.jpg);" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h4 class="ftco-heading-2 mt-2">@this.ViewData["Title"]</h4>
                <form id="new-registration-child-inputdata-form" method="post">
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="UCN"></label>
                        <input asp-for="UCN" />
                        <span asp-validation-for="UCN" class="text-danger"></span>
                        <input hidden asp-for="UserName" value="@this.User.Identity.Name" />
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="MiddleName"></label>
                        <input asp-for="MiddleName" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="YearOfBirth"></label>
                        <input asp-for="YearOfBirth" />
                        <span asp-validation-for="YearOfBirth" class="text-danger"></span>
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="MotherFullName">Майка</label>
                        <select class="form-control text-primary" asp-for="MotherId">
                            @foreach (var parent in (IEnumerable<ISOOU.Web.ViewModels.Users.CreateCandidateParentViewModel>)this.ViewData["Parents"])
                            {
                                <option value="@parent.Id">@parent.FullName</option>
                            }
                        </select>
                        <span asp-validation-for="MotherFullName" class="text-danger"></span>
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="FatherId">Баща</label>
                        <select class="form-control text-primary" asp-for="FatherId">
                            @foreach (var parent in (IEnumerable<ISOOU.Web.ViewModels.Users.CreateCandidateParentViewModel>)this.ViewData["Parents"])
                            {
                                <option value="@parent.Id">@parent.FullName</option>
                            }
                        </select>
                        <span asp-validation-for="FatherFullName" class="text-danger"></span>
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="KinderGarten"></label>
                        <input asp-for="KinderGarten" />
                        <span asp-validation-for="KinderGarten" class="text-danger"></span>
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="SEN"> СОП </label>
                        <label asp-for="SEN"><input asp-for="SEN" type="radio" value="false" checked>НЕ</label>
                        <label asp-for="SEN"><input asp-for="SEN" type="radio" value="true">ДА</label>
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="Desease"> Хронични заболявания </label>
                        <label asp-for="Desease"><input asp-for="Desease" type="radio" value="false" checked>НЕ</label>
                        <label asp-for="Desease"><input asp-for="Desease" type="radio" value="true">ДА</label>
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <input type="submit" class="btn btn-secondary py-3 px-4" value="Запиши" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}





