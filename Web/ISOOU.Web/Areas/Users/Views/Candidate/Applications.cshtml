@page
@model ApplicationsModel
@{
    ViewData["Title"] = "Кандидатури";
    ViewData["ActivePage"] = ManageNavPages.Applications;
}

<h4>@ViewData["Title"]</h4>
<div class="container">
    <hr />
    <div class="row">
        <div class="col-md-12 d-flex">
            <div class="container-fluid d-flex justify-content-around">
                <a class="btn btn-secondary py-3 px-4" asp-page="./AddApplications">Добави училище</a>
            </div>
        </div>
    </div>
    <hr />
</div>
<hr />
<div class="row">
    <div class="col-md-6">
        <h4>@Model.StatusMessage</h4>
        <p><strong>Кандидатури за следващото класиране</strong></p>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Желание</th>
                        <th>Училище</th>
                        <th>Точки</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @{
                            for (int i = 1; i <= 3; i++)
                            {
                                <td>i</td>

                                <td>12</td>
                            }
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>



