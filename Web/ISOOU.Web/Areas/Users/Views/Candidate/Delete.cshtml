@model ISOOU.Web.ViewModels.Users.DeleteCandidateViewModel
@{
    ViewData["Title"] = "Изтриване на дете";
}

<section class="ftco-heading-2" style="background-image: url(/images/bg_4.jpg);" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="alert alert-danger">
                    <strong>Внимание! </strong>На път сте да изтриете дете от системата!
                </div>
                <form id="delete-candidat" method="post">
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="UCN"></label>
                        <input selected disabled asp-for="@Model.UCN" />
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" disabled value="@Model.FirstName" />
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="MiddleName"></label>
                        <input asp-for="MiddleName" disabled value="@Model.MiddleName" />
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" disabled value="@Model.LastName" />
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="YearOfBirth"></label>
                        <input asp-for="YearOfBirth" disabled value="@Model.YearOfBirth" />
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="MotherFullName">Майка</label>
                        <select class="form-control text-primary" asp-for="MotherFullName">
                            @foreach (var mom in (IEnumerable<string>)this.ViewData["Mother"])
                            {
                                if (mom == @Model.MotherFullName)
                                {
                                    <option selected disabled value="@Model.MotherFullName">@Model.MotherFullName</option>
                                }
                                <option disabled value="@mom">@mom</option>
                            }
                        </select>
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="FatherFullName">Баща</label>
                        <select class="form-control text-primary" asp-for="FatherFullName">
                            @foreach (var dad in (IEnumerable<string>)this.ViewData["Father"])
                            {
                                if (dad == @Model.FatherFullName)
                                {
                                    <option selected disabled value="@Model.FatherFullName">@Model.FatherFullName</option>
                                }
                                <option disabled value="@dad">@dad</option>
                            }
                        </select>
                    </div>
                    <div class="container mt-1 d-flex justify-content-end">
                        <input type="submit" class="btn btn-secondary py-3 px-4" value="Изтрий" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>