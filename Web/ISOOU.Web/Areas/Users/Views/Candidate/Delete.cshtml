@model ISOOU.Web.ViewModels.Users.DeleteCandidateViewModel
@{
    ViewData["Title"] = "Деца";
}


<section class="ftco-section img" id="section" style="background-image: url(/images/bg_4.jpg);" data-stellar-background-ratio="0.5">
    <div class="container-fluid bg">
        <div class="row">
            <h4 class="ftco-heading-2"></h4>
            <div class="col-6 d-flex justify-content-around">
                <div id="add-parent" class="container" style="">
                    <form id="new-registration-inputdata-form" method="post">
                        <div class="row d-flex justify-content-end">
                            <div class="form-inline">
                                <input asp-for="UCN" value="@Model.UCN" disabled/>
                            </div>
                            <div class="form-inline">
                                <input asp-for="FirstName" value="@Model.FirstName" disabled/>
                            </div>
                            <div class="form-inline">
                                <input asp-for="MiddleName" value="@Model.MiddleName" disabled/>
                            </div>
                            <div class="form-inline">
                                <input asp-for="LastName" value="@Model.LastName" disabled/>
                            </div>
                            <div class="form-inline">
                                <input asp-for="YearOfBirth" value="@Model.YearOfBirth" disabled/>
                            </div>
                            <div class="form-inline">
                                <input asp-for="KinderGarten" value="@Model.KinderGarten" disabled/>
                            </div>
                            <div class="form-group">
                                <label asp-for="SEN"> СОП </label>
                                <label asp-for="SEN"><input asp-for="SEN" type="radio" value="НЕ" checked disabled>НЕ</label>
                                <label asp-for="SEN"><input asp-for="SEN" type="radio" value="ДА" disabled>ДА</label>
                            </div>
                            <div class="form-group">
                                <label asp-for="Desease"> Хронични заболявания </label>
                                <label asp-for="Desease"><input asp-for="Desease" type="radio" value="НЕ" checked disabled>НЕ</label>
                                <label asp-for="Desease"><input asp-for="Desease" type="radio" value="ДА" disabled>ДА</label>
                            </div>
                        </div>
                        <div class="container d-flex justify-content-around">
                            <input type="submit" class="btn btn-secondary py-3 px-4" value="Изтрий" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}





