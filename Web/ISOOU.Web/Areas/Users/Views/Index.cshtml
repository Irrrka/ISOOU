@model ISOOU.Web.ViewModels.Users.FamilyHomeViewModel

@{
    this.ViewData["Title"] = "Начало";
}

<section class="ftco-section img" id="section" style="background-image: url(/images/bg_4.jpg);" data-stellar-background-ratio="0.5">
    <div class="container-fluid bg">
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-12 d-flex">
            <div class="container-fluid d-flex justify-content-around">
                <button class="btn btn-secondary py-3 px-4" asp-area="Users" href="Candidate/Create">Добави дете</button>
            </div>
        </div>
        <div class="col-md-12 d-flex">
            <div class="container-fluid d-flex justify-content-around">
                @if (Model.Parents.Count >= 2)
                {
                    <button class="btn btn-secondary py-3 px-4" asp-area="Users" href="Parent/Create" disabled>Добави родител</button>
                }
                <button class="btn btn-secondary py-3 px-4" asp-area="Users" href="Parent/Create">Добави родител</button>
            </div>
        </div>
    </div>
</div>
<hr />
@{
    if (Model.Parents != null || Model.Candidates != null)
    {
        <div class="container">
            <div class="row justify-content-start">
                <div class="col-6">
                    <table class="table px-4 py-3">
                        <tr height="18" style="height:18px;">
                            <th><h4 class="ftco-heading-2">Деца:</h4></th>
                            @{
                                foreach(var candidate in Model.Candidates)
                                {
                                    <td>
                                        <a asp-controller="Candidate" asp-action="Edit" asp-route-id="@candidate.Id">@candidate.FullName</a>
                                    </td>
                                }
                            }
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <hr />
        <div class="container">
            <div class="row justify-content-start">
                <div class="col-6">
                    <table class="table px-4 py-3">
                        <tr height="18" style="height:18px;">
                            <th><h4 class="ftco-heading-2">Родители:</h4></th>
                            @{
                                foreach (var parent in Model.Parents)
                                {
                                    <td>
                                        <a asp-controller="Parent" asp-action="Edit" asp-route-id="@parent.Id">@parent.FullName</a>
                                    </td>
                                }
                            }
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    }
}
    </div>
</section>

