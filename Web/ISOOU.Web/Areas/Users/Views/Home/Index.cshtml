@model ISOOU.Web.ViewModels.Users.FamilyHomeViewModel

@{
    this.ViewData["Title"] = "Начало";
}

<section class="ftco-section img" style="background-image: url(/images/bg_4.jpg);" data-stellar-background-ratio="0.5">
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="container d-flex justify-content-around">
                <a class="btn btn-secondary py-3 px-4" asp-area="Users" asp-controller="Candidate" asp-action="Create">Добави дете</a>
                @if (Model != null && Model.Parents.Count >= 2)
                {
                    <a class="btn btn-secondary py-3 px-4 disabled" asp-area="Users" asp-controller="Parent" asp-action="Create">
                        Добави родител
                    </a>
                }
                @if (Model == null || Model.Parents.Count < 2)
                {
                    <a class="btn btn-secondary py-3 px-4" asp-area="Users" asp-controller="Parent" asp-action="Create">
                        Добави родител
                    </a>
                }
                </div>
    </div>
</div>
<hr />
@{
    if (Model!=null)
    {
        <div class="container">
            <div class="row justify-content-start">
                <div class="col-6">
                    <table class="table px-4 py-3">
                        <tr height="18" style="height:18px;">
                            <th><h4 class="ftco-heading-2">Деца:</h4></th>
                            @{
                                if (Model.Candidates.Count != 0)
                                {
                                    foreach (var candidate in Model.Candidates)
                                    {
                                    <td>
                                        <a asp-controller="Candidate" asp-action="Edit" asp-route-id="@candidate.Id">@candidate.FullName</a>
                                    </td>
                                        }
                                    }
                                }
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <hr />
        <div class="container">
            <div class="row justify-content-start">
                <div class="col-6">
                    <table class="table px-4 py-3">
                        <tr height="18" style="height:18px;">
                            <th><h4 class="ftco-heading-2">Родители:</h4></th>
                            @{
                                if (Model.Parents.Count != 0)
                                {
                                    foreach (var parent in Model.Parents)
                                    {
                                    <td>
                                        <a asp-controller="Parent" asp-action="Edit" asp-route-id="@parent.Id">@parent.FullName</a>
                                    </td>
                                        }
                                    }
                                }
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    }
}
    </div>
</section>

