@model ISOOU.Web.ViewModels.Users.DeleteParentViewModel
@{
    ViewData["Title"] = "Изтриване на родител";
}

<section class="ftco-heading-2" style="background-image: url(/images/bg_4.jpg);" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h4 class="ftco-heading-2 mt-2">@this.ViewData["Title"]</h4>
                <form id="delete-parent" method="post">
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="UCN"></label>
                        <input selected disabled asp-for="@Model.UCN" />
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="ParentRole">Родител</label>
                        <select class="form-control text-primary" asp-for="ParentRole">
                            @foreach (var role in (IEnumerable<string>)this.ViewData["ParentsRole"])
                            {
                                if (role == @Model.ParentRole)
                                {
                                    <option selected disabled value="@Model.ParentRole">@Model.ParentRole</option>
                                }
                                <option disabled value="@role">@role</option>
}
                        </select>
                        <input hidden asp-for="UserName" value="@this.User.Identity.Name" />
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" disabled value="@Model.FirstName" />
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="MiddleName"></label>
                        <input asp-for="MiddleName" disabled value="@Model.MiddleName" />
                    </div>
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" disabled value="@Model.LastName" />
                    </div>
                   
                    <div class="form-inline mt-1 justify-content-end">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" disabled value="@Model.PhoneNumber" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                 
                    <div class="container mt-1 d-flex justify-content-end">
                        <input type="submit" class="btn btn-secondary py-3 px-4" value="Изтрий" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>