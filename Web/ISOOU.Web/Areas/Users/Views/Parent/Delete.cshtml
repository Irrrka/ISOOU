@model ISOOU.Web.ViewModels.Users.EditParentInputModel
@{
    ViewData["Title"] = "Родители";
}
<section class="ftco-section img" id="section" style="background-image: url(/images/bg_4.jpg);" data-stellar-background-ratio="0.5">
    <div class="container-fluid bg">
        <div class="row">
            <h4 class="ftco-heading-2"></h4>
            <div class="col-6 d-flex justify-content-around">
                <div id="add-parent" class="container" style="">
                    <form id="new-registration-inputdata-form" method="post">
                        <div class="row d-flex justify-content-end">
                            <div class="form-inline">
                                <input asp-for="UCN" value="@Model.UCN" disabled/>
                            </div>
                            <div class="form-inline">
                                <input asp-for="FirstName" value="@Model.FirstName"/>
                            </div>
                            <div class="form-inline">
                                <input asp-for="MiddleName" value="@Model.MiddleName"/>
                            </div>
                            <div class="form-inline">
                                <input asp-for="LastName" value="@Model.LastName"/>
                            </div>
                            <div class="form-inline">
                                <select class="form-control text-primary" id="type" asp-for="PermanentCity">
                                    <option value="@Model.PermanentCity" selected disabled></option>
                                    @foreach (var city in (IEnumerable<string>)this.ViewData["CityNames"])
                                    {
                                        <option value="@city">@city</option>
                                    }
                                </select>
                            </div>
                            <div class="form-inline">
                                <select class="form-control text-primary" id="type" asp-for="PermanentDistrict">
                                    <option value="@Model.PermanentDistrict" selected disabled></option>
                                    @foreach (var district in (IEnumerable<ISOOU.Web.ViewModels.Districts.CreateParentDistrictViewModel>)this.ViewData["Districts"])
                                    {
                                        <option value="@district.Id">@district.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-inline">
                                <input asp-for="PermanentAddress" value="@Model.PermanentAddress"/>
                            </div>
                            <div class="form-inline">
                                <select class="form-control text-primary" id="type" asp-for="CurrentCity">
                                    <option value="@Model.CurrentCity" selected disabled></option>
                                    @foreach (var city in (IEnumerable<string>)this.ViewData["CityNames"])
                                    {
                                        <option value="@city">@city</option>
                                    }
                                </select>
                            </div>
                            <div class="form-inline">
                                <select class="form-control text-primary" id="type" asp-for="CurrentDistrict">
                                    <option value="@Model.CurrentDistrict" selected disabled></option>
                                    @foreach (var district in (IEnumerable<ISOOU.Web.ViewModels.Districts.CreateParentDistrictViewModel>)this.ViewData["districts"])
                                    {
                                        <option value="@district.Id">@district.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-inline">
                                <input asp-for="CurrentAddress" />
                            </div>
                            <div class="form-inline">
                                <input asp-for="PhoneNumber" />
                            </div>
                            <div class="form-inline">
                                <input asp-for="WorkName" />
                            </div>
                            <div class="form-inline">
                                <select class="form-control text-primary" id="type" asp-for="WorkDistrict">
                                    <option value="@Model.WorkDistrict" selected disabled></option>
                                    @foreach (var district in (IEnumerable<ISOOU.Web.ViewModels.Districts.CreateParentDistrictViewModel>)this.ViewData["districts"])
                                    {
                                        <option value="@district.Id">@district.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="container d-flex justify-content-around">
                            <input type="submit" class="btn btn-secondary py-3 px-4" value="Изтрий" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
