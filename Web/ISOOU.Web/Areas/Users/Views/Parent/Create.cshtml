@model ISOOU.Web.ViewModels.Users.CreateParentInputModel
@{
    ViewData["Title"] = "Родители";
}


<section class="ftco-section img" id="section" style="background-image: url(/images/bg_4.jpg);" data-stellar-background-ratio="0.5">
    <div class="container-fluid bg">
        <div class="row">
            <h4 class="ftco-heading-2"></h4>
            <div class="col-6 d-flex justify-content-around">
                <div id="add-parent" class="container" style="">
                    <form id="new-registration-inputdata-form" method="post">
                        <div class="row d-flex justify-content-end">
                            <div class="form-inline">
                                <label asp-for="UCN"></label>
                                <input asp-for="UCN" />
                                <span asp-validation-for="UCN" class="text-danger"></span>
                            </div>
                            <div class="form-inline">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-inline">
                                <label asp-for="MiddleName"></label>
                                <input asp-for="MiddleName" />
                                <span asp-validation-for="MiddleName" class="text-danger"></span>
                            </div>
                            <div class="form-inline">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-inline">
                                <label asp-for="PermanentCity"></label>
                                <select class="form-control text-primary" id="type" asp-for="PermanentCity">
                                    <option selected disabled>---Изберете град---</option>
                                    @foreach (var city in (IEnumerable<string>)this.ViewData["CityNames"])
                                    {
                                        <option value="@city">@city</option>
                                    }
                                </select>
                                <span asp-validation-for="PermanentCity" class="text-danger"></span>
                            </div>
                            <div class="form-inline">
                                <label asp-for="PermanentDistrict"></label>
                                <select class="form-control text-primary" id="type" asp-for="PermanentDistrict">
                                    <option selected disabled>---Изберете район---</option>
                                    @foreach (var district in (IEnumerable<ISOOU.Web.ViewModels.Districts.CreateParentDistrictViewModel>)this.ViewData["Districts"])
                                    {
                                        <option value="@district.Id">@district.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="PermanentDistrict" class="text-danger"></span>
                            </div>
                            <div class="form-inline">
                                <label asp-for="PermanentAddress"></label>
                                <input asp-for="PermanentAddress" />
                                <span asp-validation-for="PermanentAddress" class="text-danger"></span>
                            </div>
                            <div class="form-inline">
                                <label asp-for="CurrentCity"></label>
                                <select class="form-control text-primary" id="type" asp-for="CurrentCity">
                                    <option selected disabled>---Изберете град---</option>
                                    @foreach (var city in (IEnumerable<string>)this.ViewData["CityNames"])
                                    {
                                        <option value="@city">@city</option>
                                    }
                                </select>
                                <span asp-validation-for="CurrentCity" class="text-danger"></span>
                            </div>
                            <div class="form-inline">
                                <label asp-for="CurrentDistrict"></label>
                                <select class="form-control text-primary" id="type" asp-for="CurrentDistrict">
                                    <option selected disabled>---Изберете район---</option>
                                    @foreach (var district in (IEnumerable<ISOOU.Web.ViewModels.Districts.CreateParentDistrictViewModel>)this.ViewData["districts"])
                                    {
                                        <option value="@district.Id">@district.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="CurrentDistrict" class="text-danger"></span>
                            </div>
                            <div class="form-inline">
                                <label asp-for="CurrentAddress"></label>
                                <input asp-for="CurrentAddress" />
                                <span asp-validation-for="CurrentAddress" class="text-danger"></span>
                            </div>
                            <div class="form-inline">
                                <label asp-for="PhoneNumber"></label>
                                <input asp-for="PhoneNumber" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-inline">
                                <label asp-for="WorkName"></label>
                                <input asp-for="WorkName" />
                                <span asp-validation-for="WorkName" class="text-danger"></span>
                            </div>
                            <div class="form-inline">
                                <label asp-for="WorkDistrict"></label>
                                <select class="form-control text-primary" id="type" asp-for="WorkDistrict">
                                    <option selected disabled>---Изберете район---</option>
                                    @foreach (var district in (IEnumerable<ISOOU.Web.ViewModels.Districts.CreateParentDistrictViewModel>)this.ViewData["districts"])
                                    {
                                        <option value="@district.Id">@district.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="WorkDistrict" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="container d-flex justify-content-around">
                            <input type="submit" class="btn btn-secondary py-3 px-4" value="Запиши" />
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>


    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
