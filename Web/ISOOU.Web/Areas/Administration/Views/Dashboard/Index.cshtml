@model ISOOU.Web.ViewModels.Home.DashboardViewModel
@{
    this.ViewData["Title"] = "Administration dashboard";
}
<!--<h5 class="ftco-heading-2 bg-danger">Период без класирания!</h5>-->
<div class="container">
    <div class="row">
        <div class="col-md-12 d-flex">
            <div class="container-fluid d-flex justify-content-around">
                <a class="btn btn-secondary py-3 px-4" asp-area="Administration" asp-controller="Dashboard" asp-action="CreateDirector">Добави директор</a>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12 d-flex">
            <div class="container-fluid d-flex justify-content-around">
                @if (Model.Status != "Finished")
                {
                    <form asp-area="Administration" asp-controller="Dashboard" asp-action="StartProcedure" method="post">
                        <div class="row d-flex justify-content-around">
                            <input type="submit" class="btn btn-danger py-3 px-4" value="СТАРТ КЛАСИРАНЕ" />
                        </div>
                    </form>
                }
                else
                {
                    <div class="row d-flex justify-content-around">
                        <table class="table table-borderless end">
                            <tbody>
                                <tr>
                                    <td height="21" style="height:21px;">
                                        <strong>Последно класиране</strong>
                                    </td>
                                    <td height="21" style="height:21px;">
                                        <strong>@Model.RankingDate</strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td height="21" style="height:21px;">
                                        <strong>Начало записване</strong>
                                    </td>
                                    <td height="21" style="height:21px;">
                                        <strong>@Model.StartEnrollment</strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td height="21" style="height:21px;">
                                        <strong>Край записване</strong>
                                    </td>
                                    <td height="21" style="height:21px;">
                                        <strong>@Model.EndEnrollment</strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        </div>
                        <form asp-area="Administration" asp-controller="Dashboard" asp-action="Revert" method="post">
                            <div class="row d-flex justify-content-around">
                                <input type="submit" class="btn btn-danger py-3 px-4" value="ПРЕКРАТИ КЛАСИРАНЕ" />
                            </div>
                        </form>
                        }
                    </div>
                </div>
    </div>
    <hr />
    @{
        if (Model.Content != null || Model.Subject != null || Model.UserEmail != null)
        {
            <div class="row">
                <div class="col-md-12 d-flex">
                    <h5 class="ftco-heading-2">Последно получено съобщение</h5>
                    <div class="container-fluid d-flex justify-content-around">
                        <div class="form-inline justify-content-between">
                            <label asp-for="UserEmail">от Потребител: @Model.UserEmail</label>
                        </div>
                        <div class="form-inline justify-content-between">
                            <label asp-for="Subject">Тема: @Model.Subject</label>
                        </div>
                        <div class="form-group justify-content-between">
                            <label asp-for="Content">Съдържание:</label>
                            <textarea asp-for="Content" disabled class="form-control"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="form-group justify-content-around">
                <h5 class="ftco-heading-2"><i>Няма получени съобщения в системата!</i></h5>
            </div>
        }
    }
</div>
