@page
@model ChildModel
@{
    ViewData["Title"] = "Деца";
    ViewData["ActivePage"] = ManageNavPages.Child;
}
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName">Име</label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MiddleName">Презиме</label>
                <input asp-for="MiddleName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName">Фамилия</label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UCN">ЕГН</label>
                <input asp-for="UCN" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.Permanent">Постоянен адрес</label>
                <input asp-for="Address.Permanent" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.Current">Настоящ адрес</label>
                <input asp-for="Address.Current" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.District">Район</label>
                <input asp-for="Address.District" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.Quarter">Квартал</label>
                <input asp-for="Address.Quarter" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MothersFullName">Майка</label>
                <input asp-for="MothersFullName" class="form-control" value="Ирррка" disabled />
            </div>
            <div class="form-group">
                <label asp-for="FathersFullName">Баща</label>
                <input asp-for="FathersFullName" class="form-control" value="Джово" disabled/>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-secondary px-5 py-3">Запиши дете</button>
        </form>
    </div>
</div>
