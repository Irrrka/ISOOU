@page
@model IndexModel
@{
    ViewData["Title"] = "Деца";
    ViewData["ActivePage"] = ManageNavPages.Child;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName">Име</label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MiddleName">Презиме</label>
                <input asp-for="MiddleName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName">Фамилия</label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UCN">ЕГН</label>
                <input asp-for="UCN" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.Permanent">Постоянен адрес</label>
                <input asp-for="Address.Permanent" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.Current">Настоящ адрес</label>
                <input asp-for="Address.Current" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.District">Район</label>
                <input asp-for="Address.District" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.Quarter">Квартал</label>
                <input asp-for="Address.Quarter" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MothersFullName">Име и фамилия на майката</label>
                <input asp-for="MothersFullName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MothersPhoneNumber">Телефонен номер на майката</label>
                <input asp-for="MothersPhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MothersEGN">ЕГН на майката</label>
                <input asp-for="MothersEGN" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MothersWork">Месторабота на майката</label>
                <input asp-for="MothersWork" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FathersFullName">Име и фамилия на бащата</label>
                <input asp-for="FathersFullName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FathersPhoneNumber">Телефонен номер на бащата</label>
                <input asp-for="FathersPhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FathersEGN">ЕГН на бащата</label>
                <input asp-for="FathersEGN" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FathersWork">Месторабота на бащата</label>
                <input asp-for="FathersWork" class="form-control" />
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-secondary px-4 py-3 mt-3">Save</button>
        </form>
    </div>
</div>
