@page
@model CriteriaModel
@{
    ViewData["Title"] = "Критерии и точки по правилата за прием";
    ViewData["ActivePage"] = ManageNavPages.Criterias;
}

<h4>@ViewData["Title"]</h4>
<div class="container">
    <h4>ViewData["Title"]</h4>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Критерий</th>
                    <th>Точки</th>
                    <th>Данни</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    @{
                        var i = 0;
                        foreach (var kvp in Model.Input.ScoresByCriteria)
                        {
                            i++;
                            <td>@i</td>
                            <td>@kvp.Key</td>
                            <td>@kvp.Value</td>
                            <td>Лозенец</td>
                        }
                    }
            </tbody>
        </table>
    </div>
</div>