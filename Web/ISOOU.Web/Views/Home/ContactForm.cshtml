@using ISOOU.Web.ViewModels.Home

@model ContactFormInputModel
@{
    this.ViewData["Title"] = "Обратна връзка";
}
<section class="ftco-section ftco-no-pt ftco-no-pb contact-section">
    <div class="container">
        <div id="map"></div>
        <div class="row d-flex align-items-stretch no-gutters">
            <div class="col-md-6 p-4 p-md-5 order-md-last bg-light">
                <form asp-area="" asp-controller="Home" asp-action="ContactForm" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="@Model.Email">Е-поща</label>
                        <input asp-for="@Model.Email" class="form-control" />
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Subject">Тема</label>
                        <input asp-for="@Model.Subject" class="form-control" />
                        <span asp-validation-for="@Model.Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Content">Съобщение</label>
                        <textarea asp-for="@Model.Content" class="form-control"></textarea>
                        <span asp-validation-for="@Model.Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-secondary py-3 px-4" value="Изпрати" />
                    </div>
                </form>
            </div>
            <div class="col-md-6 d-flex align-items-stretch">
            </div>
        </div>
    </div>
</section>