@using ISOOU.Web.ViewModels.Search

@model SearchFreeSpotsInputModel

@{
    ViewData["Title"] = $"Свободни места по район";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <section class="ftco-section img" style="background-image: url(/images/bg_4.jpg);" data-stellar-background-ratio="0.5">
        <div class="container">
            <div id="searchForm" class="row justify-content-center">
                <div class="col-md-6 py-5 px-md-5 bg">
                    <div class="heading-section heading-section-black ftco-animate mb-5">
                        <span class="subheading">Въведете район по постоянен, настоящ адрес или месторабота</span>
                        <form asp-area="" asp-controller="Search" asp-action="FreeSpots" method="post">
                            <div class="row d-flex">
                                <div class="form-group col-10">
                                    <div class="form-group">
                                        <label asp-for="SelectedPermanentDistrictId">РАЙОН по постоянен адрес</label>
                                        <select class="form-control text-primary" asp-for="SelectedPermanentDistrictId">
                                            <option value="18">Неизвестен</option>
                                            @foreach (var district in (IEnumerable<ISOOU.Web.ViewModels.Search.SearchDistrictViewModel>)this.ViewData["Districts"])
                                            {
                                                <option value="@district.Id">@district.Name</option>
                                            }
                                        </select>
                                        <span asp-validation-for="SelectedPermanentDistrictId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row d-flex">
                                <div class="form-group col-10">
                                    <div class="form-group">
                                        <label asp-for="SelectedCurrentDistrictId">РАЙОН по настоящ адрес</label>
                                        <select class="form-control text-primary" asp-for="SelectedCurrentDistrictId">
                                            <option value="18">Неизвестен</option>
                                            @foreach (var district in (IEnumerable<ISOOU.Web.ViewModels.Search.SearchDistrictViewModel>)this.ViewData["Districts"])
                                            {
                                                <option value="@district.Id">@district.Name</option>
                                            }
                                        </select>
                                        <span asp-validation-for="SelectedCurrentDistrictId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row d-flex">
                                <div class="form-group col-10">
                                    <div class="form-group">
                                        <label asp-for="SelectedWorkDistrictId">РАЙОН по месторабота</label>
                                        <select class="form-control text-primary" asp-for="SelectedWorkDistrictId">
                                            <option value="18">Неизвестен</option>
                                            @foreach (var district in (IEnumerable<ISOOU.Web.ViewModels.Search.SearchDistrictViewModel>)this.ViewData["Districts"])
                                            {
                                                <option value="@district.Id">@district.Name</option>
                                            }
                                        </select>
                                        <span asp-validation-for="SelectedWorkDistrictId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="row d-flex justify-content-center">
                                <input type="submit" class="btn btn-secondary py-3 px-4" value="Намери" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>