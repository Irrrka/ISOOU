@model SearchFreeSpotsInputModel

<div class="heading-section heading-section-black ftco-animate mb-5">
    <span class="subheading">Въведете година на раждане и район по постоянен адрес</span>
    <form asp-area="" asp-controller="Search" asp-action="FreeSpots" method="post">
        <hr />
        <div class="row d-flex">
            <div class="form-group col-md-6">
                <select class="form-control bg-secondary" id="Years" asp-for="SelectedYearOfBirth">
                    <option value="Набор">Набор</option>
                    @foreach (var year in Model.YearOfBirths)
                    {
                        <option value="@year">@year</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-6">
                <div class="select-wrap">
                    <select class="form-control bg-secondary" id="Districts" asp-for="SelectedDistrict">
                        <option value="Набор">Район</option>
                        @foreach (var district in Model.Districts)
                        {
                            <option value="@district">@district</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <hr />
        <div class="row d-flex justify-content-center">
            <input type="submit" class="btn btn-secondary py-3 px-4" value="Намери" />
        </div>
    </form>
</div>